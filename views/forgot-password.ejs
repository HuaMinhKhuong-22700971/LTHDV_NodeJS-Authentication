<section class="main-content">
    <h2 class="mb-4 text-white">Forgot Password</h2>
  
    <% if (message) { %>
      <p class="text-warning"><%= message %></p>
    <% } %>
  
    <form action="/user/forgot-password" method="post" class="mb-3">
      <div class="form-group">
        <label for="email" class="text-white">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="form-control" 
          placeholder="Enter your registered email" 
          required
        />
      </div>
  
      <div class="form-group mt-3">
        <div class="g-recaptcha" data-sitekey="6LflLRIqAAAAAHrbmeUx3WThRxp7On8iAQQOIQWH"></div>
      </div>
  
      <button type="submit" class="btn btn-light mt-3">Reset Password</button>
    </form>
  
    <hr class="bg-light" />
  
    <p class="text-white">
      <strong>Don't have an account?</strong>
      <a href="/user/signup" class="text-info"><strong>Sign up</strong></a>
    </p>
  
    <p class="text-white">
      <strong>Already have an account?</strong>
      <a href="/user/signin" class="text-info"><strong>Sign in</strong></a>
    </p>
  </section>
  